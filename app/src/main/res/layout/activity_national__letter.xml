<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/neartowhite"
    tools:context=".Letter_Field.National_Letter">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="10dp"
        tools:layout_editor_absoluteX="212dp"
        tools:layout_editor_absoluteY="284dp">

        <Button
            android:id="@+id/Letter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           android:layout_marginTop="10dp"
            android:textSize="@dimen/text_done_size"
            android:textColor="@color/gray"
            android:gravity="center"
            android:background="@drawable/shapebutton"
            android:onClick="nationaletterField"
            android:text="@string/Letter" />

        <Button
            android:id="@+id/S_humman"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/text_done_size"
            android:layout_marginTop="5dp"
            android:textColor="@color/gray"
            android:background="@drawable/shapebutton"
            android:onClick="nationaletterField"
            android:text="@string/S_humman" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>